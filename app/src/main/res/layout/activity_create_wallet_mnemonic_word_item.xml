<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/relativeLayoutWord"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_create_wallet_mnemonic_word_item_frameLayoutWord_height"
        android:background="@drawable/normal_edittext_background">

        <TextView
            android:id="@+id/textViewSerialNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/mainColorText"
            android:layout_marginTop="@dimen/line_normal_widthOrHeight_broad"
            android:layout_marginLeft="@dimen/view_normal_margin_narrow"
            android:textSize="@dimen/textView_normal_textSize_narrow"
            tools:text="@string/number_0_text" />

        <TextView
            android:id="@+id/textViewContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/mainColorText"
            android:layout_centerInParent="true"
            android:textSize="@dimen/textView_normal_textSize_default"
            tools:text="@string/app_name" />

    </RelativeLayout>


</RelativeLayout>