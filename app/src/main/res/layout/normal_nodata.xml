<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:tint="@color/normal_nodata"
        android:src="@mipmap/normal_nodata" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_normal_margin_default"
        android:text="@string/normal_nodata_textView_text"
        android:textColor="@color/normal_nodata"
        android:textSize="@dimen/textView_normal_textSize_default" />

</LinearLayout>